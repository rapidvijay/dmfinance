                    <div class="form-group">
                        <label class="control-label col-sm-3" for="">Name Arabic</label>

                        <div class="col-md-9">
                            @Html.EditorFor(model => model.Arabic_Name, new { htmlAttributes = new { @class = "form-control", @readonly = "true" } })
