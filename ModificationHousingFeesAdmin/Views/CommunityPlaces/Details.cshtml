                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-3" for="">Name English</label>
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.English_Name, new { htmlAttributes = new { @class = "form-control", @readonly = "true" } })
                            @Html.ValidationMessageFor(model => model.English_Name, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-9">
                            @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-info" })
